<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:padding="2dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="60dp">
        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/TL_y_more_project_SA"
                android:background="#000000">

            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:gravity="center_vertical" android:id="@+id/TR_y_more_project_search">
                <ImageView
                        android:layout_width="24dp"
                        android:layout_height="30dp" app:srcCompat="@drawable/ic_search_white_24dp"
                        android:layout_weight="1"/>
                <TextView
                        android:text="Search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_weight="1" android:gravity="end"
                        android:layout_marginEnd="2dp"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:gravity="center_vertical" android:id="@+id/TR_y_more_project_add_uip">
                <ImageView
                        android:layout_width="24dp"
                        android:layout_height="30dp" app:srcCompat="@drawable/ic_add_plein_circle_white_24dp"
                        android:layout_weight="1"/>
                <TextView
                        android:text="Add a collaborator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:layout_marginEnd="2dp" android:gravity="end"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>