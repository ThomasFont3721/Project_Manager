<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_margin="8dp">
    <TextView
            android:text="Name Project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/TV_z_toolbar_project_name"
            android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/constraintLayout2" app:layout_constraintHorizontal_bias="0.0"
            android:textSize="16sp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="60dp"
            android:layout_height="60dp" android:layout_weight="0"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/constraintLayout2">

        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:max="100"
                android:progressDrawable="@drawable/zz_progressbar_background_circle"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:progress="100"/>
        <ProgressBar
                android:id="@+id/CPB_z_toolbar_project_progress_advanced"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:max="100"
                android:progressDrawable="@drawable/zz_progressbar_circle"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:rotation="90" android:progress="20"/>
        <TextView
                android:id="@+id/TV_z_toolbar_project_progress_pourcentage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="10dp" android:textColor="#FFFFFF"
                android:text="..%"
                android:textStyle="bold" android:textSize="13sp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center" app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintVertical_bias="0.0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>